
<div class='container'>
    <div class='row'>
        <div class='col-md-7'>
            <%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %>
        </div>

        <div class='col-md-5'>
            <h1><%= @portfolio_item.title %></h1>

            <hr>

            <em><%= @portfolio_item.subtitle %></em>

            <hr>

            <p><%= @portfolio_item.body %></p>

            <hr>

            <h3>Technologies Used:</h3>
            <% @portfolio_item.technologies.each do |t| %>
            <p><%= t.name %></p>
            <% end%>
            
            <% if logged_in?(:site_admin) %>
                <%= link_to "Edit", edit_portfolio_url(@portfolio_item.id) %>
                <%= link_to 'Delete', portfolio_path(@portfolio_item.id), method: :delete, data: { confirm: 'Are you sure you want to delete this portfolio item?' } %>
            <% end %>
        </div>
    </div>
</div>